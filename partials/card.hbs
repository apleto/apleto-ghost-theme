{{!--
Re-usable card for linking to posts
--}}

<div class="card mb-5 {{post_class}} {{#if feature_image}}with-image{{else}}no-image{{/if}}">

        {{#if feature_image}}
            <img class="card-img-top"
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 1000px) 400px, 700px"
                src="{{img_url feature_image size="m"}}"
                alt="{{title}}"
            />
        {{/if}}
        <div class="card-body">
            <div class="card-meta d-flex justify-content-between">
                <h2 class="gh-card-title">{{title}}</h2>
                <span class="gh-card-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time> <span class="bull">&bull;</span> {{reading_time}}</span>
            
            </div>

            <p>{{excerpt}}</p>
            
        </div>
        <div class="card-footer">
            <strong>Read more</strong>
        </div>

</div>